{
    "compilerOptions": {
      "target": "esnext",
      "module": "esnext",
      "jsx": "preserve",
      "lib": [
        "dom",
        "es2017"
      ],
      "baseUrl": ".",
      "moduleResolution": "node",
      "strict": true,
      "allowJs": true,
      "alwaysStrict": true,
      "noEmit": true,
      "noFallthroughCasesInSwitch": true,
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "isolatedModules": true,
      "removeComments": true,
      "preserveConstEnums": true,
      "sourceMap": true,
      "forceConsistentCasingInFileNames": true,
      "resolveJsonModule": true
    },
    "exclude": [
      "dist",
      ".next",
      "out",
      "next.config.js",
      "node_modules"
    ],
    "include": [
      "next-env.d.ts",
      "**/*.ts",
      "**/*.tsx"
    ]
  }